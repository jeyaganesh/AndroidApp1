<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.deepak.informationbank">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SwipeCardActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SelectPreferencesActivity"
            android:label="@string/title_activity_select_preferences"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ListCardActivity"
            android:label="@string/title_activity_list_card"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ImageCardActivity"
            android:label="@string/title_activity_image_card"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>